# Pi Platform API key (from Pi Developer Portal)
PI_API_KEY=

# Supabase connection (Service Role required on backend)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=

# Session secret (if sessions/cookies are used)
SESSION_SECRET=

# Backend port
PORT=10000

# Frontend and CORS origin
# Example: https://pmtestnet.netlify.app
FRONTEND_ORIGIN=
# Optional legacy alias used in some configs
NEXT_PUBLIC_FRONTEND_URL=

# Timezone (Render uses system TZ; override if needed)
TZ=Europe/Budapest

# Optional: Render self-ping URL to keep instance warm
RENDER_EXTERNAL_URL=

# Optional: YouTube API keys (comma-separated)
YOUTUBE_API_KEYS=

# Cycle config (optional)
# CYCLE_START_DATE=2025-10-21
# PHASE=fetch # 'fetch' | 'refresh'
